<%- include("partials/header.ejs") %>

<body>
  <main class="container">
   

  <% posts.forEach((post) => { %>
   
      <div class="single-post"> 
        <h2><%= post.title %></h2>
        <p> <%= post.message  %>  </p>
        <h4> <%= post.author %> </h4>
        <a class="edit-button" href="/edit/<%= post.id %>"> Edit</a>
        <a href="/delete/<%= post.id %>"> Delete</a>
      </div> 
        <br>
     <% });  %> 
   
   
    </main>

</body>

